<div id="landing" class="signup">
	<p class="white left">
		We will only email you if&hellip;<br>
		1. We have your invite ready<br>
		2. We have got some awesome news to share about Swayly<br>
		3. You're a lucky gift winner!<br>
	</p>

	<div class="wrapper">
		<%= form_tag(complete_path, remote: true) do %>
			<div class="input">
				<%= hidden_field_tag(:answer, params[:answer]) %>
				<%= hidden_field_tag(:friends, params[:friends]) %>

				<%= label_tag(:email, "Enter your email") %><br>
				<%= label_tag(:email, "Start typing&hellip;".html_safe, class: "i") %>

				<%= text_field_tag(:email, "", placeholder: "your email address", autocomplete: "off") %>
			</div>

			<div class="right">
				<%= submit_tag("Done") %>
			</div>
		<% end %>
	</div>
</div>

<script type="text/javascript">
$(function() { SiteBindings.promo(); });
</script>
